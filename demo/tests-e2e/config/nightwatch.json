{
  "src_folders" : ["tests-e2e/dist"],
  "output_folder" : "reports/nightwatch",
  "custom_commands_path" : "",
  "custom_assertions_path" : "",
  "page_objects_path" : "",
  "globals_path" : "",

  "selenium" : {
    "start_process" : true,
    "server_path" : "../node_modules/selenium-standalone/.selenium/selenium-server/2.47.1-server.jar",
    "log_path" : "reports",
    "host" : "127.0.0.1",
    "port" : 4444,
    "cli_args" : {
      "webdriver.chrome.driver" : "../node_modules/chromedriver/bin/chromedriver"
    }
  },

  "test_settings" : {
    "default" : {
      "desiredCapabilities": {
        "browserName": "firefox",
        "javascriptEnabled": true,
        "acceptSslCerts": true
      }
    },

    "chrome" : {
      "desiredCapabilities": {
        "browserName": "chrome"
      }
    },

    "phantomjs" : {
      "desiredCapabilities": {
        "browserName": "phantomjs",
        "phantomjs.binary.path": "../node_modules/phantomjs/bin/phantomjs"
      }
    }
  }
}
