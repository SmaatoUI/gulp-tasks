{
  "src_folders": ["tests-e2e/dist/tests"],
  "output_folder": "reports/nightwatch",
  "custom_commands_path": "",
  "custom_assertions_path": "",
  "page_objects_path": "",
  "globals_path": "",

  "selenium": {
    "start_process": true,
    "server_path": "../node_modules/selenium-standalone/.selenium/selenium-server/2.47.1-server.jar",
    "log_path": "reports",
    "host": "127.0.0.1",
    "port": 4444,
    "cli_args": {
      "webdriver.chrome.driver": "../node_modules/chromedriver/bin/chromedriver"
    }
  },

  "test_settings": {
    "default": {
      "screenshots": {
        "enabled": true,
        "on_failure": true,
        "on_error": false,
        "path": "screenshots/_errorLog"
      }
    },

    "firefox": {
      "desiredCapabilities": {
        "browserName": "firefox",
        "javascriptEnabled": true,
        "acceptSslCerts": true
      }
    },

    "chrome": {
      "desiredCapabilities": {
        "browserName": "chrome",
        "javascriptEnabled": true,
        "acceptSslCerts": true
      }
    }
  }
}
